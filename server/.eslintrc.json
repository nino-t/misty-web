{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "../.eslintrc.base.json",
    "standard"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "space-before-function-paren": ["error", "never"],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }]
  }
}
